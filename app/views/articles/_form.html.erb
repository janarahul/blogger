<%= form_for(@article, html: {multipart: true}) do |f|%>
	<p>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :body %>
		<%= f.text_area :body %>
	</p>
	<p>
		<%= f.label :tag_list %>
		<%= f.text_field :tag_list %>
	</p>
	<% if @article.image.exists? %>
		<p><%= image_tag @article.image.url %></p>
	<% end %>
	<p>
		<%= f.label :image, "Attach a new image"%><br />
		<%= f.file_field :image %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>